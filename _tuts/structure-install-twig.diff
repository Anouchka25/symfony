+    {% set showErrorIcon = (not compound or force_error|default(false)) and not valid %}
+    <div class="form-group {% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}{{ showErrorIcon ? ' has-feedback' : '' }}">
