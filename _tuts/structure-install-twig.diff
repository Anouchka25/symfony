+        {% if help|default %}
+            {# set the aria-describedby attribute #}
+            {%- set attr = attr|merge({'aria-describedby': 'help-block-'~id }) -%}
+        {% endif %}
+        {{- form_widget(form, {
+            'attr': attr
+        }) -}}
